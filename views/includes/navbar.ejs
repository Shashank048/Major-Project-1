
<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }

  /* MOBILE SIDEBAR STYLES */
  @media (max-width: 768px) {
    .navbar-collapse {
      position: fixed;
      top: 0;
      right: -100%;
      width: 180px;
     
      background-color: #ffffff;
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
      transition: right 0.3s ease;
      z-index: 1050;
      padding: 1rem;
      overflow-y: auto;
      flex-direction: column;
      align-items: flex-start;
    }

    .navbar-collapse.show {
      right: 0;
    }

    .navbar-nav {
      width: 100%;
      text-align: left;
      flex-direction: column;
    }

    .navbar-nav .nav-link {
      padding: 0.75rem 0;
      width: 100%;
      font-size: 1.1rem;
      border-bottom: 1px solid #eee;
    }

    form.d-flex {
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
      margin-top: 1rem;
    }

    .search-inp,
    .search-btn {
      width: 100%;
    }

    /* backdrop for click outside close */
    .mobile-backdrop {
      display: none;
      position: fixed;
      inset: 0;
      background-color: rgba(0, 0, 0, 0.3);
      z-index: 1049;
    }

    .mobile-backdrop.show {
      display: block;
    }
  }
</style>

  

<nav class="navbar navbar-expand-md bg-body-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-inp" type="search" placeholder="search destination" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- Backdrop -->
<div class="mobile-backdrop" id="mobileBackdrop"></div>
<script>
  const toggler = document.querySelector('.navbar-toggler');
  const collapse = document.querySelector('.navbar-collapse');
  const backdrop = document.getElementById('mobileBackdrop');

  toggler.addEventListener('click', () => {
    collapse.classList.add('show');
    backdrop.classList.add('show');
  });

  backdrop.addEventListener('click', () => {
    collapse.classList.remove('show');
    backdrop.classList.remove('show');
  });
</script>
