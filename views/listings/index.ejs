                <script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");

  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    let priceSpans = document.getElementsByClassName("listing-price");

    for (let i = 0; i < priceSpans.length; i++) {
      let base = parseFloat(priceSpans[i].dataset.base);
      if (taxSwitch.checked) {
        let withTax = Math.round(base * 1.18); // 18% GST
        priceSpans[i].innerText = withTax.toLocaleString("en-IN");
        taxInfo[i].innerText = "(incl. 18% GST)";
        taxInfo[i].style.display = "inline";
      } else {
        priceSpans[i].innerText = base.toLocaleString("en-IN");
        taxInfo[i].innerText = "+18% GST";
        taxInfo[i].style.display = "none";
      }
    }
  });
</script>


<script>
document.querySelectorAll('.category-btn').forEach(button => {
  button.addEventListener('click', async (e) => {
    e.preventDefault();
    const category = e.target.dataset.category || e.target.innerText.trim();

    try {
      const res = await fetch(`/category/${category}`);
      const data = await res.text();

      // Update only listings part
      document.querySelector('.listing-wrapper').innerHTML = data;

      // Reapply tax logic if needed
      if (typeof taxSwitch !== 'undefined' && taxSwitch.checked) {
        taxSwitch.click();
      }
    } catch (err) {
      console.error("Error fetching listings:", err);
    }
  });
});


</script> 






