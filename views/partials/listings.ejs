<% if (allListings.length === 0) { %>
  <div style="display: flex; justify-content: center; align-items: center; height: 40vh; margin-bottom: 1rem;">
    <p style="color: red; font-weight: 500; font-size: 1.2rem;">No Hotels in this category.</p>
  </div>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% allListings.forEach(listing => { %>
    <div class="col">
      <div class="card mb-4">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
          <a href="/listings/<%= listing._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
