<% layout("/layouts/boilerplate") %>

<style>
  .payment-wrapper {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .payment-card {
    width: 100%;
    max-width: 380px;
    padding: 25px;
    border-radius: 14px;
    background: #fff;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  .payment-card h3 {
    text-align: center;
    margin-bottom: 15px;
  }

  .amount-box {
    background: #f7f7f7;
    padding: 12px;
    border-radius: 10px;
    text-align: center;
    font-size: 18px;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .payment-method {
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 12px;
    margin-bottom: 10px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .payment-method input {
    margin-right: 10px;
  }

  .payment-method:hover {
    border-color: #ff385c;
    background: #fff5f7;
  }

  .pay-btn {
    width: 100%;
    background: #ff385c;
    color: #fff;
    border: none;
    padding: 12px;
    border-radius: 25px;
    font-size: 16px;
    font-weight: 600;
    margin-top: 15px;
  }

  .pay-btn:hover {
    background: #e03150;
  }

  .secure-text {
    text-align: center;
    font-size: 12px;
    color: #777;
    margin-top: 10px;
  }
</style>

